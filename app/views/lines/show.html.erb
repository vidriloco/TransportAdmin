<div class="hidden color-h"><%= @line.color %></div>
<div class="sub-header">
	<h1><span class="transport"><%= @line.transport.name %></span> - <span class="line"><%= @line.name %></span> </h1>
	<span class="name-by-directions"><%= @line.name_by_directions %></span>
</div>

<div class="block">
	<div class="ways subsection">
		<%= render 'ways/index' %>
	</div>

	<div class="stations subsection">
		<%= render :partial => 'stations/index', :locals => {:station_agrouper => @line } %>
	</div>
	
	<div class="segments subsection">
		<%= render :partial => "segments/index", :locals => {:station_agrouper => @line } %>
	</div>
</div>

<% content_for :footer do %>
	<%= link_to t('actions.back'), lines_path %>
	<%= link_to t('actions.edit'), edit_line_path(@line), :class => "to-right modify" %>
<% end %>
