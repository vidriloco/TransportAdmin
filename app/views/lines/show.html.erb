<%= render :partial => 'shared/sub_header', :locals => {:line => @line } %>

<div class="traversal-basic rounded-5">
	<%= render :partial => 'traversals/automatic_generation' %>
</div>
<% content_for :raw do %>
	<div class="block">
		
		<ul class="service-numbers">
			<% [:ways, :stations, :segments, :connections].each do |item| %>
				<%= render :partial => 'shared/children_count', :locals => { :model_from => @line, :property => item }%>
			<% end %>
		</ul>
		
		<div class="ways subsection">
			<%= render 'ways/index' %>
		</div>
		<div class="divider"></div>
		<div class="stations subsection">
			<%= render :partial => 'stations/index', :locals => {:station_line => @line } %>
		</div>
		<div class="divider"></div>
		<div class="segments subsection">
			<%= render :partial => "segments/index", :locals => {:station_line => @line } %>
		</div>
		<div class="divider"></div>
		<div class="connections subsection">
			<%= render :partial => "connections/index", :locals => {:station_line => @line } %>
		</div>
	
	</div>
<% end %>

<% content_for :footer do %>
	<%= link_to t('actions.back'), lines_path %>
	<%= link_to t('actions.edit'), edit_line_path(@line), :class => "to-right modify" %>
<% end %>
