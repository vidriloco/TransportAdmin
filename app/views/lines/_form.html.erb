<%= form_for(@line) do |f| %>
		<div class="simple-form">
    	<%= f.label :name, t('activerecord.attributes.line.name') %><br />
	    <%= f.text_field :name %>

	    <%= f.label :name_by_directions, t('activerecord.attributes.line.name_by_directions') %><br />
	    <%= f.text_field :name_by_directions %>

	    <%= f.label :color, t('activerecord.attributes.line.color') %><br />
	    <%= f.text_field :color %>

	    <%= f.label :transport, t('activerecord.attributes.line.transport') %><br />
	    <%= f.select :transport_id, options_from_collection_for_select(Transport.all, 'id', 'name', @line.transport_id), {:include_blank => true} %>
		</div>
    <%= f.submit t('actions.save') %>
<% end %>
